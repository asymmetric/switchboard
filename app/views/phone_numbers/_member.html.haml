- checked = @list.number_is_admin?(member) ? 1 : nil
%li
  - if @list and @list.list_type == 'announcement'
    %span.toggle 
      %input{:type => 'checkbox', :value => 1, :checked => checked, :onchange => admin_checkbox_onchange(member)}  
      %span Toggle Admin
  = member.display_number_with_name
  %span.remove_member_icon
    = link_to_remove_member(member, @list.id)
    = image_tag("spinner.gif", :id => 'which_member_spinner', :style => 'display: none')
